/* pages/appointment/appointment.wxss */

/* 选时间 */

.title {
    width: 100%;
    height: 110rpx;
    display: flex;
    font-size: 30rpx;
    color: #0EC788;
    justify-content: space-between;
    border-radius: 16rpx;
    padding: 30rpx 40rpx 0 40rpx;
    box-sizing: border-box;
}

.title text:nth-of-type(1) {
    font-size: 30rpx;
    color: #858585;
}

.box {
    height: 558rpx;
    width: 100%;
    background: #fff;
    position: absolute;
    bottom: 0;
    z-index: 2;
       -moz-border-radius: 16rpx 16rpx 0 0;
    -webkit-border-radius: 16rpx 16rpx 0 0;
    border-radius: 16rpx 16rpx 0 0;
    animation: sport 0.3s;
    transform: translateY(0px);
}

.box1 {
    height: 558rpx;
    width: 100%;
    background: #fff;
    position: absolute;
    bottom: 0;
    z-index: 2;
         -moz-border-radius: 16rpx 16rpx 0 0;
    -webkit-border-radius: 16rpx 16rpx 0 0;
    border-radius: 16rpx 16rpx 0 0;
     animation: sport 0.3s;
    transform: translateY(0px);

}

@keyframes sport {
    0% {
        transform: translateY(279px);
        opacity: 1;
    }

    100% {
        transform: translateY(0px);
        opacity: 1;
    }
}

.picker-view {
    position: absolute;
    bottom: 0;
    z-index: 2;
    height: 440rpx;
}

.mask_layer {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

page {
    background: #eee;
}

.headPic {
    padding-bottom: 100rpx;
    text-align: center;
    font-size: 26rpx;
    color: #131313;
}

.headImg {
    width: 180rpx;
    height: 180rpx;
    background: #fff;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    margin-top: 80rpx;
}

.tel {
    width: 100%;
    height: 100rpx;
    display: flex;
    padding: 0 74rpx 0 76rpx;
    box-sizing: border-box;
}
.btnq{
    width: 180rpx;
    height: 180rpx;
    padding: 0;
}
.telphone {
    font-size: 26rpx;
    color: #858585;
    padding: 0  20rpx  0  20rpx;
    box-sizing: border-box;
    width: 412rpx;
    height: 100rpx;
    background: #fff;
    margin-right: 40rpx;
}

.have {
