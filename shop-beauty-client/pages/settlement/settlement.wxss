/* pages/settlement/settlement.wxss */

page {
    background: #f3f3f3;
}

.category {
    margin-top: 20rpx;
    width: 100%;
    height: 190rpx;
    background: #fff;
    padding: 20rpx 0 20rpx 20rpx;
    box-sizing: border-box;
    display: flex;
}

.category .left {
    width: 150rpx;
    height: 150rpx;
    border-radius: 4rpx;
    margin-right: 24rpx;
}

.categoryImg {
    width: 100%;
    height: 100%;
    border-radius: 4rpx;
}

.category .right {
    padding-top: 20rpx;
    padding-bottom: 22rpx;
    box-sizing: border-box;
}

.category .right .top {
    font-size: 30rpx;
    color: #131313;
    margin-bottom: 26rpx;
}

.category .right .bottom {
    display: flex;
    font-size: 24rpx;
    color: #858585;
    align-items: center;
    justify-content: center;
}
.vip{
    font-size: 30rpx;
    color: #f6186a;
    font-weight: 500;

}
.null-view{
width: 40rpx;

}


.unitPrice {
    margin-top: 20rpx;
    display: flex;
    width: 100%;
    height: 100rpx;
    background: #fff;
    padding: 0 40rpx 0 40rpx;
    box-sizing: border-box;
    justify-content: space-between;
    font-size: 30rpx;
    color: #858585;
    line-height: 100rpx;
}

.unitPrice text:nth-of-type(2) {
    color: #131313;
}

.counter {
    width: 100%;
    height: 100rpx;
    background: #fff;
    padding: 0 40rpx 0 40rpx;
    box-sizing: border-box;
}

.counter .box {
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
    color: #858585;
    line-height: 100rpx;
    border-top: 2rpx solid #f4f4f4;
}

.counter .right {
    display: flex;
    justify-content: center;
    align-items: center;
}

.counter .right view:nth-of-type(3) {
    width: 48rpx;
    height: 48rpx;
    background: #f3f3f3;
    border: 2rpx solid #e2e2e2;
    border-radius: 4rpx;
    text-align: center;
    line-height: 48rpx;
}

.counter .right view:nth-of-type(2) {
    width: 98rpx;
    font-size: 30rpx;
    color: #131313;
    text-align: center;
}

.counter .right view:nth-of-type(1) {
    width: 48rpx;
    height: 48rpx;
    background: #f3f3f3;
    border: 2rpx solid #e2e2e2;
    border-radius: 4rpx;
    text-align: center;
    line-height: 48rpx;
}

.totalPrice {
    background: #fff;
    padding: 0 40rpx 0 40rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.box1 {
    display: flex;
    width: 100%;
    height: 100rpx;
    justify-content: space-between;
    font-size: 30rpx;
    color: #858585;
    line-height: 100rpx;
    border-top: 2rpx solid #f4f4f4;
}

.totalPrice text:nth-of-type(2) {
    font-size: 30rpx;
    color: #f6186a;
}

.payStyle {
    width: 100%;
    padding: 0 40rpx 0 40rpx;
    box-sizing: border-box;
    background: #fff;
    font-size: 30rpx;
    color: #858585;
}

.payStyle .title {
    font-size: 30rpx;
    color: #131313;
    font-weight: 500;
    height: 100rpx;
    line-height: 100rpx;
}

.balance {
    width: 100%;
    height: 100rpx;
    display: flex;
    line-height: 100rpx;
    justify-content: space-between;
    border-top:2rpx solid #f4f4f4;
    border-bottom: 2rpx solid #f4f4f4;
}

.balance text:nth-of-type(2) {
    color: #f6186a;
}

.style {
    width: 100%;
    height: 100rpx;
    display: flex;
    line-height: 100rpx;
    justify-content: space-between;
}

.style .right {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
}

.rightleft {
    margin-right: 60rpx;
}

.rightleft, .rightright {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 26rpx;
    color: #131313;
}

.circle {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    border: 2rpx solid #979797;
    margin-top: 28rpx;
    margin-right: 20rpx;
}

.tel {
    padding: 0 40rpx 0 40rpx;
    box-sizing: border-box;
    width: 100%;
    height: 100rpx;
    background: #fff;
    margin-top: 20rpx;
    display: flex;
    line-height: 100rpx;
    justify-content: space-between;
    font-size: 30rpx;
    color: #858585;
    border: none;
    border-radius: 0
}
button::after{
    border: none;
    border-radius: 0;
}
.obtain {
    display: flex;
    font-size: 30rpx;
    color: #131313;
}

.icon-obtain {
    width: 14rpx;
    height: 20rpx;
    margin-left: 30rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    background: #f6186a;
    position: fixed;
    bottom: 0;
    font-size: 34rpx;
    color: #fff;
    font-weight: 500;
    display: flex;
    justify-content: center;
    align-items: center;
     border-radius: 0;
}
.footer view:nth-of-type(1){
    margin-right: 40rpx;
}
.icon-true{
    width: 40rpx;
    height: 40rpx;
    margin-top:30rpx;
    margin-right:20rpx;

}
