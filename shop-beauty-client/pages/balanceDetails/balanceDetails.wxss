/* pages/balanceDetails/balanceDetails.wxss */

page {
    background: #f3f3f3;
}
.big{
    padding: 0 20rpx 0 20rpx;
    box-sizing: border-box;
    background: #fff;
}
.title {
    width: 100%;
    height: 100rpx;
    background: white;
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
    color: #131313;
    line-height: 100rpx;
    font-weight: 500;
    margin-top: 20rpx;
    border-bottom: 2rpx solid #f4f4f4;
}
.out{
  color: #F6186A;
}
.in{
    color: #0EC788
}
.item{
    width: 100%;
    height: 100rpx;
    background: white;
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
    color: #131313;
    line-height: 100rpx;
    border-bottom: 2rpx solid #f4f4f4;
}
.item text:nth-of-type(1){
     color: #858585;
}
.remarks{
    width: 100%;
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
    color: #131313;
    padding: 28rpx 0 28rpx 0rpx;
    box-sizing: border-box;
    /* border-bottom: 2rpx solid #f4f4f4; */
}
.remarks view:nth-of-type(1){
    font-size: 15px;
color: #858585;
margin: auto 0;
}
.remarks view:nth-of-type(2){
width: 458rpx;
height: auto;
text-align: right;
word-wrap:break-word;
}